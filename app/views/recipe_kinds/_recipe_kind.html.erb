<div class="responsive-sm-above">
  <div>
    <% if recipe_kind.image_id and recipe_kind.image %>
      <%= image_tag medium_image_path(recipe_kind.image), width: 452, height: 304, class: "recipe-show-image", style: "display: block;" %>
      <% unless recipe_kind.image.author.blank? %>
        <% if recipe_kind.image.source.blank? %>
          <div style="text-align: center;"><i>Crédit photo: <%= recipe_kind.image.author %></i></div>
        <% else %>
          <div style="text-align: center;"><i>Crédit photo: </i><u><%= link_to recipe_kind.image.author, recipe_kind.image.source, style: "color:black; font-size:0.95em;" %></u></div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div style="width: 100%;">
    <h1>
      <span class="recipe-title"><%= translated(recipe_kind.name) %></span>
    </h1>
    <div style="max-width: 600px">
      <%= my_sanitize(recipe_kind.description) %>
    </div>
  </div>
</div>
