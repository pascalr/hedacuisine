<%= render partial: 'meta/nav' %>

<div style="height: 1em;"></div>
<div class="responsive-sm-above" style="gap: 20px;">
  <%= render partial: @recipe_kind.image, locals: {variant: :medium} if @recipe_kind.image %>
  <div style="width: 100%;">
    <h1 class="recipe-title" data-model="<%= @recipe_kind.model_name.to_s.underscore %>" data-url="<%= recipe_kind_path(@recipe_kind) %>" data-update-column="name" contenteditable="true"><%= @recipe_kind.name %></h1>
    <div id="root" style="max-width: 600px; width: 100%; height: 400px;"></div>
  </div>
</div>

<%= javascript_pack_tag "recipe_kind_editor" %>
