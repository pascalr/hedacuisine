<%= render partial: 'meta/nav' %>

<h1>Kinds</h1>

<%= form_with(model: Kind.new, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, size: 15 %>
  <%= form.label :kind_id %>
  <%= form.collection_select :kind_id, @kinds, :id, :name, include_blank: true %>
  <%= form.submit %>
<% end %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Nom</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |abstract| %>
      <%= form_with(model: abstract) do |form| %>
        <tr>
          <td><%= form.text_field :name %></td>
          <td><%= form.collection_select :kind_id, @kinds, :id, :name, include_blank: true %></td>
          <td><%= form.submit 'Update' %></td>
          <td><%= link_to 'Show', abstract %></td>
          <td><%= link_to 'Destroy', abstract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
