<%= render partial: 'meta/nav' %>

<h1>Container Formats</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>Volume</th>
      <th>Diameter</th>
      <th>Height with lid</th>
      <th>Lid height</th>
      <th>Max content height</th>
      <th>Body weight</th>
      <th>Lid weight</th>
      <th>Show fraction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @container_formats.each do |container_format| %>
      <%= form_with(model: container_format, local: true) do |form| %>
        <tr>
          <td><%= form.text_field :name, size: 15 %></td>
          <td><%= form.text_field :icon %></td>
          <td><%= form.number_field :volume, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :diameter, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :height_with_lid, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :lid_height, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :max_content_height, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :body_weight, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.number_field :lid_weight, precision: 2, step: 0.1, size: 6 %></td>
          <td><%= form.submit "Mettre Ã  jour" %></td>
          <td><%= link_to 'Show', container_format %></td>
          <td><%= link_to_delete 'Destroy', container_format, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Container Format', new_container_format_path %>
