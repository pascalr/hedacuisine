<h3>Add a food</h3>
<%= form_with(model: MachineFood.new, local: true) do |form| %>
  <%= form.hidden_field :machine_id, value: machine.id %>
  <%= form.label :food_id %>
  <%= form.collection_select :food_id, Food.where(in_pantry: true), :id, :name %>
  <%= form.submit %>
<% end %>

<table class="table table-striped table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Food</th>
      <th>Grocery threshold</th>
      <th>Full weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% machine.machine_foods.each do |machine_food| %>
      <%= form_with(model: machine_food, local: true) do |form| %>
        <tr>
          <td><%= link_to machine_food.food.name, machine_food.food %></td>
          <td><%= machine_food.grocery_threshold %></td>
          <td><%= machine_food.full_weight %></td>
          <td><%= form.submit "Mettre Ã  jour" %></td>
          <td><%= link_to 'Show', machine_food %></td>
          <td><%= link_to 'Destroy', machine_food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
