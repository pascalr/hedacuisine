<%= render partial: 'meta/nav' %>

<p>
  <strong>Name:</strong>
  <%= @machine.name %>
</p>

<h2>Containers</h2>

<table class="table table-striped table-sm">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Jar format</th>
      <th>Filled</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machine.containers.each do |unit| %>
      <%= form_with(model: unit, local: true) do |form| %>
        <tr>
          <td><%= form.text_field :jar_id, size: 10 %></td>
          <td><%= form.collection_select :container_format_id, ContainerFormat.all, :id, :name, include_blank: true %></td>
          <td></td>
          <td></td>
          <td><%= form.submit "Mettre à jour" %></td>
          <td><%= link_to 'Show', unit %></td>
          <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<span class="toggle-link title_icon" data-toggle_id="add_unit">➕</span>
<div id="add_unit">
  <%= form_with(model: Container.new, local: true) do |form| %>
    <%= form.label :jar_id %>
    <%= form.text_field :jar_id %>
    <%= form.hidden_field :machine_id, value: @machine.id %>
    <%= form.label :container_format_id %>
    <%= form.collection_select :container_format_id, ContainerFormat.all, :id, :name, include_blank: true %>
    <%= form.submit %>
  <% end %>
</div>

<%= javascript_pack_tag "editor" %>

<%= link_to 'Edit', edit_machine_path(@machine) %> |
<%= link_to 'Back', machines_path %>
