<%= render partial: "machines/tabs" %>

<% if params[:active_tab].nil? or params[:active_tab].to_i == 1 %>
  <%= render partial: "inventory", locals: {machine: @machine} %>
<% elsif params[:active_tab].to_i == 2 %>
  <%= render partial: "grocery_list", locals: {machine: @machine} %>
<% elsif params[:active_tab].to_i == 3 %>
  <%= render partial: "machine_foods", locals: {machine: @machine} %>
<% elsif params[:active_tab].to_i == 4 %>
  <%= render partial: "containers", locals: {machine: @machine} %>
<% elsif params[:active_tab].to_i == 5 %>
  <%= render partial: "grocery_config", locals: {machine: @machine} %>
<% end %>

