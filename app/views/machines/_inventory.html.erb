<table class="table table-striped table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Food</th>
      <th>Containers</th>
      <th>In inventory</th>
      <th>Grocery threshold</th>
      <th>Full weight</th>
    </tr>
  </thead>

  <tbody>
    <% machine.machine_foods.each do |machine_food| %>
      <tr>
        <td><%= link_to machine_food.food.name, machine_food.food %></td>
        <td>
          <% machine_food.food.containers.each do |container| %>
            <%= image_tag "JarIcon#{container.format.name}.png", size: "24x24" %>
          <% end %>
        </td>
        <td>
          <% unless machine_food.current_weight.nil? %>
            <%= machine_food.current_weight %> mL (<%= machine_food.current_weight %> g)
          <% end %>
        </td>
        <td><%= machine_food.grocery_threshold %></td>
        <td><%= machine_food.full_weight %></td>
      </tr>
    <% end %>
  </tbody>
</table>

