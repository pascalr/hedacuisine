<div class="responsive-margins-lg">

  <%= link_to 'edit', edit_food_path(@food) if current_user_admin?  %>

  <div style="border: solid 1px black; border-radius: 5px; padding: 5px; margin-bottom: 20px;">
    <b>Comment faire maison: <%= link_to @food.name, @food.producing_recipes.first %></b><br>
    
    <div class="recipe-instructions">
      <%= pretty_complete_instructions(@food.producing_recipes.first) %>
    </div>
  </div>

  <div class="article">
    <h1><%= @food.name.capitalize %></h1>

    <h2>Recettes</h2>

    <% if @food.recipes.blank? %>
      <p>Aucune recette pour l'instant.</p>
    <% else %>
      <% @food.recipes.each do |recipe| %>
        <%= link_to translated(recipe.name).capitalize, recipe %><br>
      <% end %>
    <% end %>

    <%= article_for @food.name %>
  </div>

</div>
