<!DOCTYPE html>
<html>
  <head>
    <title>HedaRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%# favicon_link_tag asset_path("logo.png") %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  </head>

  <body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" style="flex-grow: unset;">
        <div class="navbar-nav">
          <%= link_to_active "ğŸ¦¾Heda", recipes_path, class: "navbar-brand" %>
          <%= link_to_active t("hedacuisine.menu.recipes"), menus_path, class: "nav-item nav-link" %>
          <%= link_to_active t("hedacuisine.menu.ingredients"), 'TODO', class: "nav-item nav-link disabled" %>
          <%= link_to_active t("hedacuisine.menu.about"), home_path, class: "nav-item nav-link" %>
        </div>
      </div>
      <form class="form-inline">
        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
      </form>
      <div class="collapse navbar-collapse" style="flex-grow: unset;">
        <div class="navbar-nav">
          <% if params[:locale] and params[:locale][0..1] == 'fr' %>
            <%= link_to 'EN', url_for(locale: 'en'), class: 'nav-item nav-link' %>
            <%# url_for(params.merge({:your_new_parameter => value})) maybe this is above does not work %>
          <% else %>
            <%= link_to 'FR', url_for(locale: 'fr-CA'), class: 'nav-item nav-link' %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to current_user.email, edit_user_registration_path, class: "nav-item nav-link" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-item nav-link"  %>
          <% else %>
            <%= link_to t("devise.shared.links.sign_up"), new_user_registration_path, class: "nav-item nav-link" %>
            <%= link_to t("devise.sessions.new.sign_in"), new_user_session_path, class: "nav-item nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>

    <% unless flash.empty? %>
      <script type="text/javascript">
         <% flash.each do |f| %>
       <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
      	 toastr['<%= type %>']('<%= f[1] %>');
      <% end %>
      </script>
    <% end %>
    <div class="mx-2">
      <%= yield %>
    </div>
    <%# javascript_pack_tag 'autocomplete_pack' %>
  </body>
  <%= content_for :render_async %>
</html>
