<!DOCTYPE html>
<html>
  <head>
    <title>HedaRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%# favicon_link_tag asset_path("logo.png") %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  </head>

  <body>
    <% if params[:locale] %>
      <span id="locale" data-full="<%= params[:locale] %>" data-lang="<%= params[:locale][0..1] %>" hidden></span>
    <% end %>
    <div class="topnav">
      <div>
        <%# link_to_highlight_active t("mine.home"), home_path %>
        <%# TODO: Une petite image de maison à côté de menus %>
        <%# link_to_highlight_active "Menus", menus_path %>
        <%# link_to_highlight_active "Recettes", recipes_path %>
        <%# link_to_highlight_active "Ingrédients", ingredients_path %>
        <%# link_to_highlight_active "Old", items_path %>
        <%# link_to_highlight_active t("mine.robot"), robot_path %>
        <%# link_to_highlight_active t("mine.FAQ"), faqs_path %>
        <%= link_to_highlight_active "🏠", home_path %>
        <%= link_to_highlight_active t("hedacuisine.menu.menus"), menus_path %>
        <%= link_to_highlight_active t("hedacuisine.menu.recipes"), 'TODO' %>
        <%= link_to_highlight_active t("hedacuisine.menu.ingredients"), 'TODO' %>
        <%= link_to_highlight_active t("hedacuisine.menu.robot"), 'TODO' %>
      </div>

      <div>
        <input id="autocomplete-search-all" type="search" placeholder="Rechercher..." size="30">
      </div>

      <div>
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path, class: "topnavlink" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "topnavlink"  %>
        <% else %>
          <%= link_to t("devise.shared.links.sign_up"), new_user_registration_path, class: "topnavlink" %>
          <%= link_to t("devise.sessions.new.sign_in"), new_user_session_path, class: "topnavlink" %>
        <% end %>
        <% if params[:locale] and params[:locale][0..1] == 'fr' %>
          <%= link_to 'EN', url_for(locale: 'en'), class: 'topnavlink' %>
          <%# url_for(params.merge({:your_new_parameter => value})) maybe this is above does not work %>
        <% else %>
          <%= link_to 'FR', url_for(locale: 'fr-CA'), class: 'topnavlink' %>
        <% end %>
        <%= link_to_highlight_active t("hedacuisine.menu.about"), 'TODO' %>
        <%# link_to_highlight_active t("mine.about"), about_path %>
      </div>
    </div>
    <% unless flash.empty? %>
      <script type="text/javascript">
         <% flash.each do |f| %>
       <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
      	 toastr['<%= type %>']('<%= f[1] %>');
      <% end %>
      </script>
    <% end %>
    <%= yield %>
    <%# javascript_pack_tag 'autocomplete_pack' %>
  </body>
  <%= content_for :render_async %>
</html>
