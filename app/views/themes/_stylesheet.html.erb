<%# NOTE: Also modify /app/javascript/models/theme.js %>
<style>
  <!-- Version1 -->
  .<%= theme.css_class %> * {
    color: <%= color_to_hex_string(theme.text_color) %>;
  }
  .<%= theme.css_class %> .page {
    background-color: <%= color_to_hex_string(theme.background_color) %>;
  }
  .<%= theme.css_class %> .page + .page {
    border-top: 4px solid <%= color_to_hex_string(theme.page_separator_color) %>;
  }
  .<%= theme.css_class %> .index-page a, .theme-light .title-page a {
    color: <%= color_to_hex_string(theme.text_color) %>
  }
  .<%= theme.css_class %> .index-page a:hover {
    color: #444;
  }
  <% if theme.front_page_image %>
    .<%= theme.css_class %> .title-page {
      background-size: cover;
      background-image: url(<%= original_image_path(theme.front_page_image) %>);
    }
  <% end %>
  <% if theme.book_format %>
    .<%= theme.css_class %> .page {
      width: 100%;
      aspect-ratio: <%= theme.book_format.page_aspect_ratio %>;
    }
  <% end %>
</style>
