<%= render partial: "layouts/app" %>

<div style="height: 0.5em;"></div>

<div style="display: flex; align-items: center; gap: 1.5rem;">
  <h2>Mes livres</h2>
  <%= link_to translated("Nouveau livre"), new_book_path, class: "btn btn-outline-primary btn-sm" %>
</div>
<hr style="margin-top: 0;">

<% if @books.blank? %>
  <p>Aucun livre personel pour l'instant.</p>
  <div style="height: 2em;"></div>
<% else %>
  <%= render partial: "books/carrousel", locals: {key: 'book-1', list: @books} %>
<% end %>

<% unless @siblings_books.blank? %>
  <h2>Livres sur ce compte</h2>
  <hr style="margin-top: 0;">
  <%= render partial: "books/carrousel", locals: {key: 'book-1', list: @siblings_books} %>
<% end %>

<h2>Livres favoris</h2>
<hr style="margin-top: 0;">

<p>Aucun livre favori pour l'instant.</p>
<div style="height: 2em;"></div>

<% content_for :import_js do %>
  <%= js_import_tag "book_carrousel" %>
<% end %>
