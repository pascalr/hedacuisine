<div>
  <br><br>
  <div class="d-block d-sm-flex gap-20 text-center">
    <%= link_to_if !(controller_name == "books" and action_name == "show"), book do %>
      <%= render partial: "books/title_page", locals: {book: book} %>
    <% end %>
    <div>
      <%= link_to_if !(controller_name == "books" and action_name == "show"), book do %>
        <h2 class="text-black"><%= book.name %></h2>
      <% end %>
      <p>
        Un recueil de toutes mes recettes personelles.
      </p>
      <% if !(controller_name == "books" and action_name == "show") %>
        <%= link_to book do %>
          <button class="btn btn-outline-primary">Voir les recettes</button>
        <% end %>
      <% end %>
      <button class="btn btn-outline-primary text-primary"><%= image_tag icon_path("book-blue.svg"), size: "20x20" %></button>
        
    </div>
  </div>
  <br><br>
</div>
