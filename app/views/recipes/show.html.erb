      def pretty_time(time)
        str = @recipe.total_seconds > 3600.0 ? "%H:%M:%S" : "%M:%S"
        Time.at(time).utc.strftime(str)
      end
    %>

    <% @recipe.steps.each do |step| %>
      <tr>
        <td><%= pretty_time(total) %></td>
        <td><%= step.action_required ? "âš ï¸" : "" %></td>
        <td><%= step.command %></td>
      </tr>
      <% total += step.seconds %>
    <% end %>
