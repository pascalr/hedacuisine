<%= link_to 'Cheat', cheat_recipe_path(@recipe), method: :patch %> |
<%= link_to 'Back', recipes_path %>

<h1>Editing Recipe</h1>

<%= form_with(model: @recipe, local: true) do |form| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :source %>
    <%= form.text_field :source, size: 80 %>
  </div>

  <div>
    <b>Ingredients</b><br>
    <% if @recipe.ingredients.blank? %>
      Il n'y a pas encore d'ingr√©dients.
    <% else %>
      <% @recipe.ingredients.each_with_index do |ingredient, i| %>
        <%= i+1 %>. <%= pretty_ingredient(ingredient) %><br>
      <% end %>
    <% end %>
  </div>
  
  <div class="field">
    <b><%= form.label :complete_instructions %></b><br>
    <%= form.text_area :complete_instructions, cols: 100, rows: 10 %>
  </div>
  
  <div class="field">
    <b><%= form.label :instructions %></b><br>
    <%= form.text_area :instructions, cols: 100, rows: 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

