<%= link_to 'Back', recipes_path %>

<% @units = Unit.all %>

<h1>Editing <%= @recipe.name %></h1>

<span id="autocomplete-data" data-foods="<%= Food.all.map {|v| [v.id, v.name] } %>"/>
  
<div>
  <b>Recipe ingredients</b><br>
  <% if @recipe.recipe_ingredients.blank? %>
    Il n'y a pas encore d'ingr√©dients.
  <% else %>
    <ul class="list-group" style="max-width: 800px;" data-controller="drag" data-drag-recipe-id="<%= @recipe.id %>">
      <% @recipe.recipe_ingredients.order(:item_nb).each do |ingredient| %>
        <li class="list-group-item" data-id="<%= ingredient.id %>">
          <span style="margin-right: 10px;"><b><%= ingredient.item_nb %>.</b></span>
          <%= form_with(model: [@recipe, ingredient], local: true, class: "inline") do |form| %>
            <%= form.text_field :raw_quantity, size: "10" %>
            <%= link_to ingredient.food.name, ingredient.food %>
            <div style="float: right;">
              <%= form.text_field :comment, size: "18", style: "margin-right: 2rem;" %>
              <%= form.submit 'modifier' %>
              <%= link_to 'x', [@recipe, ingredient], method: :delete, data: {confirm: 'Are you sure?'} %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with(model: [@recipe,RecipeIngredient.new], local: true) do |form| %>
  Qty: <%= form.text_field :raw_quantity %>
  Food: <%= form.text_field :food_name, id: "autocomplete-food", placeholder: "Food..." %>
  <%= form.hidden_field :food_id, id: "autocomplete-food-id" %>
  <%= form.submit "Ajouter" %>
<% end %>

<br><br>

<%= form_with(model: @recipe, local: true) do |form| %>
  <% if @recipe.errors.any? %>
