<%= render partial: 'meta/nav' %>

<h1>Substitutions d'aliments</h1>

<span id="food-list" data-values="<%= Food.all.map(&:name) %>"/>

<%= form_with(model: FoodSubstitution.new, local: true) do |form| %>
  <%= form.label :food_name %>
  <%= form.text_field :food_name, id: "FIXME1", "data-autocomplete": "food-list", placeholder: "Food...", autocomplete: :off %>
  <%= form.label :ratio_with_colon %>
  <%= form.text_field :ratio_with_colon %>
  <%= form.label :substitute_name %>
  <%= form.text_field :substitute_name, id: "FIXME2", "data-autocomplete": "food-list", placeholder: "Food...", autocomplete: :off %>
  <%= form.submit %>
<% end %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Food</th>
      <th>Weight ratio</th>
      <th>Substitute</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_substitutions.each do |substitution| %>
      <%= form_with(model: substitution, local: true) do |form| %>
        <tr>
          <td><%= substitution.food.name %></td>
          <td><%= form.text_field :ratio_with_colon, size: "2" %></td>
          <td><%= substitution.substitute.name %></td>
          <td><%= form.submit "Mettre Ã  jour" %></td>
          <td><%= link_to 'Destroy', substitution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= javascript_pack_tag "autocomplete_field" %>
