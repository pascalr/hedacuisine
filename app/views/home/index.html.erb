<%= content_for :title, "HedaCuisine - Acceuil" %>
<%= content_for :description, "Le site officiel de Heda, le robot garde manger. Apprenez-en d'avantages et découvrez des recettes qu'il vous aide à cuisiner." %>

<h2>Livres en vedettes</h2>

<%= render partial: "books/carrousel", locals: {key: 'book-1', list: @books} %>

<br>
<h2>Catégories</h2>

<% @kinds_by_categories.each do |(kind, recipe_kinds)| %>
  <div style="height: 250px;">
    <%= render partial: "recipe_kinds/carrousel", locals: {title: link_to(kind.name, kind, style: "color: black;"), recipe_kinds: recipe_kinds, carrousel_id: kind.id} %>
  </div>
<% end %>

<% content_for :import_js do %>
  <%= js_import_tag "recipe_carrousel" %>
  <%= js_import_tag "book_carrousel" %>
<% end %>
