<p id="notice"><%= notice %></p>

<% if current_user %>

  <%= link_to 'Nouveau menu', new_menu_path %>
  <br><br>

  <h2 style="font-size: 2em;">Mes menus 🧑‍🍳</h2>
  <hr>
  <%= render partial: current_user.menus %>
  <% unless true and current_user.favorite_menus.blank? %>
    <h2 style="font-size: 2em;">Mes favoris ❤️</h2>
    <hr>
    <%= render partial: current_user.favorite_menus %>
  <% end %>
<% else %>

  <h2 style="font-size: 2em;">Menus Heda 🦾</h2>
  <hr>
  <% user = User.first # FIXME: Temporary %>
  <%= render partial: user.menus %>
<% end %>

