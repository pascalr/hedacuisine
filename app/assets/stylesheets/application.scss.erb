// xs: phones, sm: tablets, md: small laptop, lg: laptops and desktops
// Bootstrap: xs: 768 ou moins, sm: 768 à 992, md: 992 à 1200, lg: 1200 et plus

//@media screen and (min-width: 1200px)

@media screen and (max-width: 1200px) {
  .responsive-margins-lg, .responsive-margins-50-lg {
    width: 100%; /* The width is 100%, when the viewport is 800px or smaller */
  }
  .recipe-body {
    width: 100%;
  }
  body {
    margin-top: 0px;
  }
}

@media screen and (max-width: 768px) {
  .responsive-margins-sm, .responsive-margins-50-sm {
    width: 100%; /* The width is 100%, when the viewport is 800px or smaller */
  }
